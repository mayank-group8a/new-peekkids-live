<div class="sidebar">
  <div class="sidebar-wrap-inner">
    {%- if show_product_count == true or show_product_count_m == true -%}
    <div class="boost-pfs-filter-toolbar-item boost-pfs-filter-toolbar-count {% if show_product_count%}boost-pfs-filter-toolbar-count-d{% endif %} {% if show_product_count_m %}boost-pfs-filter-toolbar-count-m{% endif %}">
  <span class="boost-pfs-filter-total-product">{%- render 'boost-pfs-filter-skeleton', width: 1 -%}</span>
</div>
{%- endif -%}
<div class="sidebar-menuWrap">
  <div class="mobileTitle col-title">{{ col_title }}

  <svg class="iconPlusMinus" xmlns="http://www.w3.org/2000/svg" width="11" height="11" viewBox="0 0 11 11">
    <g id="Icon_plus" transform="translate(-341 -187.5)">
      <line id="Line_18" data-name="Line 18" x2="10" transform="translate(341.5 193)" fill="none" stroke="#ff8100" stroke-linecap="round" stroke-width="1"/>
      <line id="Line_19" data-name="Line 19" x2="10" transform="translate(346.5 188) rotate(90)" fill="none" stroke="#ff8100" stroke-linecap="round" stroke-width="1"/>
    </g>
  </svg>
  

</div>

<ul class="sidebar-menu list-menu" role="list">
    {%- for link in menu.links -%}
        <li>
        {%- assign linkHandle = link.title | handle -%}
        <a href="{{ link.url }}" class="main-item list-menu__item link link--text focus-inset {% if link.current %} menu-item--active{% endif %}{% if childlink.current %} menu-item--active{% endif %}"{% if link.current %} aria-current="page"{% endif %}{% if childlink.current %} aria-current="page"{% endif %}>
            {{- link.title | escape -}}
        </a>
        {% unless link.current %}
        {% endunless %}
        {% if linklists[linkHandle].links.size > 0  %}
            <ul>
            {%- for childlink in linklists[linkHandle].links -%}
                <li>
                    <a href="{{ childlink.url }}" class="menu-item link link--text list-menu__item focus-inset{% if childlink.current %} menu-item--active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                        {{- childlink.title | escape -}}
                    </a>
                </li>
            {%- endfor -%}
            </ul>
        {%- endif -%}
        </li>
    {%- endfor -%}
    </ul>
</div>
  </div>
</div>