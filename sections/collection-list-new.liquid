{
  "name": "New collection list ",
  "tag": "section",
  "class": "section-spliter collection-list-section",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Collections",
      "label": "t:sections.collection-list.settings.title.label"
    },
	{
      "type": "text",
      "id": "subheading",
      "label": "t:sections.collection-list.settings.subheading.label",
      "default": "Tell your brand's story through images"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.collection-list.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.collection-list.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.collection-list.settings.image_ratio.options__3.label"
        },
        {
          "value": "landscape",
          "label": "t:sections.collection-list.settings.image_ratio.options__4.label"
        },
        {
          "value": "16-9",
          "label": "t:sections.collection-list.settings.image_ratio.options__5.label"
        }
      ],
      "default": "square",
      "label": "t:sections.collection-list.settings.image_ratio.label",
      "info": "t:sections.collection-list.settings.image_ratio.info"
    },
    {
      "type": "range",
      "id": "grid",
      "label": "t:sections.collection-list.settings.grid.label",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": false,
      "label": "t:sections.collection-list.settings.show_view_all.label"
    },
	{
   	  "type":"color",
   	  "id":"background_color",
   	  "label": "t:sections.collection-list.settings.background_color.label",
   	  "default":"#F1F1F1"
    },
	{
   	  "type":"color",
   	  "id":"text_color",
   	  "label": "t:sections.collection-list.settings.text_color.label",
   	  "default":"#FFFFFF"
    },
	{
   	  "type":"color",
   	  "id":"subheading_color",
   	  "label": "t:sections.collection-list.settings.subheading_color.label",
   	  "default":"#FFFFFF"
    },
	{
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 48
    },
	{
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "t:sections.collection-list.settings.autoplay.label",
      "default": true
    },
