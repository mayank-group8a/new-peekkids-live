 {
  padding-bottom:0px ;
  padding-left:0px;
  padding-right:0px;
 }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  #shopify-section-{{ section.id }}  ul.slick-dots li.slick-active button,#shopify-section-{{ section.id }}  ul.slick-dots li.slick-active button:before
