 {
   padding:0px;
   overflow:hidden
 }
#shopify-section-{{ section.id }} .collection-list .content a.button span
{
 -webkit-transition: transform 0.3s ease-out;
          -moz-transition: transform 0.3s ease-out;
          -ms-transition: transform 0.3s ease-out;
          -o-transition: transform 0.3s ease-out;
          transition: transform 0.3s ease-out;
}
#shopify-section-{{ section.id }} .collection-list .content a.button:hover
{
	color:#e48a59 !important;
}
#shopify-section-{{ section.id }} .collection-list .content a.button:hover span {
    -webkit-transform: translateX(4px);
    -moz-transform: translateX(4px);
    -ms-transform: translateX(4px);
    -o-transform: translateX(4px);
    transform: translate(4px);
}

 #shopify-section-{{ section.id }}  .slick-track {
     overflow:hidden;
 }
 #shopify-section-{{ section.id }} .collection-list .button
 {
   background:transparent;
   box-shadow: none;
   gap: 10px;
   text-align: center;
   display: block;
   justify-content: center;
 }
 #shopify-section-{{ section.id }} .collection-list .h2-heading
 {
    text-align: center;
	margin:0px;
    min-height: auto;
 }
