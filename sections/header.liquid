                  {%- endif -%}
                  {%- endif -%}
                  {%- if settings.social_linkedin_link != blank -%}
                    <li class="list-social__item">
                      <a href="{{ settings.social_linkedin_link }}" class="list-social__link link">
                        {%- render 'icon-linkedin' -%}
                        <span class="visually-hidden">Linkedin</span>
                      </a>
                    </li>
