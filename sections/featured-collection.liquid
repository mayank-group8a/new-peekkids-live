    },
    {
      "type": "header",
      "content": "Tablet Settings"
    },
    {
      "type": "checkbox",
      "id": "tabInit",
      "label": "t:sections.quotes.settings.tabInit.label",
      "default": true
    },
    {
      "type": "range",
      "id": "tabShow",
      "label": "t:sections.quotes.settings.tabShow.label",
      "default": 3,
      "max": 6,
      "min": 1,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "tabArrows",
      "label": "t:sections.quotes.settings.tabArrows.label",
      "default": true
    },
    {
      "type": "checkbox",
