    {
      "type": "checkbox",
      "id": "pauseOnHover",
      "label": "t:sections.quotes.settings.pauseOnHover.label",
      "default": false
    },
    {
      "type": "header",
      "content": "Desktop Settings"
    },
    {
      "type": "checkbox",
      "id": "desktopInit",
      "label": "t:sections.quotes.settings.desktopInit.label",
      "default": true
    },
    {
      "type": "range",
      "id": "desktopShow",
      "label": "t:sections.quotes.settings.desktopShow.label",
      "default": 4,
