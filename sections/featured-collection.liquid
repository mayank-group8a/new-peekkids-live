      "step": 1
    },
    {
      "type": "checkbox",
      "id": "desktopArrows",
      "label": "t:sections.quotes.settings.desktopArrows.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "desktopDots",
      "label": "t:sections.quotes.settings.desktopDots.label",
