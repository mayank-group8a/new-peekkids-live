      "label": "t:sections.quotes.settings.autorotate_speed.label",
      "max": 10,
      "min": 1,
      "step": 1,
      "unit": " s",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "sliderLoop",
      "label": "t:sections.quotes.settings.sliderLoop.label",
      "default": true
